<div class="card my-profile" style="width: 18rem;">
  <div class="card-body">
    <h4 class="card-title">{{userProfile.username}}'s profile</h4>
  </div>
  <h3>{{userProfile._id}}</h3>
  <div class="followed">
    <ul>
      {{#each userProfile.follow}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
  </div>



  <div class="list-group list-group-flush">
    {{#if userProfile.watchlist}}
    <h5 class="list-group-item">On my watch list:</h5>
    <ul>
      {{#each userProfile.watchlist}}
      <li><a id={{netflixId}} href="">{{title}}</a>
        <button onclick="removeFromWatchlist({{this.netflixId}})">Delete</button>
        <button onclick="moveToSeen({{this.netflixId}})">Watched</button>
      </li>
      {{/each}}
    </ul>
    {{/if}}



    {{#if userProfile.seen}}
    <h5 class=" list-group-item">Movies I've seen:</h5>
    <ul id="seenMovies">
      {{#each userProfile.seen}}
      <li><a id="seenMovies" href="">{{title}}</a>
        {{!-- <button id="addRating">Rate this movie</button> --}}
      </li>
      {{/each}}
    </ul>
    {{/if}}
    <button id="followbtn" onclick="follow({{user._id}})">Follow Friend</button>
  </div>
</div>


