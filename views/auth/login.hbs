<div class="container signup-login-container">

  <h3>Log in</h3>

  <form class="signup-login-form form-inline" action="/auth/login" method="POST" id="login-form">
    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" name="username" id="username" class="form-control mx-sm-3"
        aria-describedby="usernameHelpInline">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" id="password" class="form-control mx-sm-3"
        aria-describedby="passwordHelpInline">
    </div>
    <div class="button">
      <button type="submit" class="btn btn-dark">Log in</button>
    </div>
  </form>


  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}


  <a class="nav-link" href="/auth/google" style="color:white;">Or log In with Google</a>

  <p class="account-message">
    Don't have an account yet?
    <a href="/auth/signup" style="color:red;">Signup</a>
  </p>
  </form>

</div>