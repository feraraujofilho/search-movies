<div class="container signup-login-container">

  <h3>Sign up</h3>

  <form class="signup-login-form form-inline" action="/auth/signup" method="POST" id="signup-form">
    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" name="username" id="username" class="form-control mx-sm-3"
        aria-describedby="usernameHelpInline">
      <small id="usernameHelpInline" class="text">
        Must be unique
      </small>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" id="password" class="form-control mx-sm-3"
        aria-describedby="passwordHelpInline">
      <small id="passwordHelpInline" class="text">
        Minimum length 8 characters
      </small>
    </div>
    <div class="button">
      <button type="submit" class="btn btn-dark">Sign up</button>
    </div>
  </form>




  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <p class="account-message">
    Already have an account?
    <a href="/auth/login" style="color:red;">Login</a>
  </p>
  </form>

</div>